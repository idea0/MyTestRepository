<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/chat_title_shape"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:layout_weight="2" >
        <View 
            android:id="@+id/background_view"
            android:layout_weight="2"
            android:layout_width="match_parent"
            android:layout_height="0dp"/>
        <ImageView 
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:src="@drawable/set_icon_yocker"/>
        <View 
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="0dp"/>
    </LinearLayout>

    <LinearLayout
            android:layout_marginLeft="60dp"
            android:layout_marginRight="60dp"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="4"
        android:gravity="center_horizontal"
        android:orientation="vertical" >
        <TextView 
            android:id="@+id/tv_person_setting"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:gravity="center"
            android:text="个人设置"
            android:textSize="16sp"
            android:textColor="#ffffff"/>
        <View 
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="#33ffffff"/>
        <TextView 
            android:id="@+id/tv_opinion_feedback"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:gravity="center"
            android:text="意见反馈"
            android:textSize="16sp"
            android:textColor="#ffffff"/>
        <View 
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="#33ffffff"/>
        <TextView 
            android:id="@+id/tv_app_score"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:gravity="center"
            android:text="应用评分"
            android:textSize="16sp"
            android:visibility="gone"
            android:textColor="#ffffff"/>
        <View 
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:visibility="gone"
            android:background="#33ffffff"/>
        <TextView 
            android:id="@+id/tv_user_agree"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:gravity="center"
            android:text="用户协议"
            android:textSize="16sp"
            android:textColor="#ffffff"/>
        <View 
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="#33ffffff"/>
        <TextView 
            android:id="@+id/tv_verson_record"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:gravity="center"
            android:text="版本记录"
            android:textSize="16sp"
            android:textColor="#ffffff"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" >
    </LinearLayout>

</LinearLayout>